{
  "name": "jekyll-bookshop-starter",
  "private": true,
  "description": "A starter template for Jekyll with Bookshop",
  "scripts": {
    "bookshop-dev": "bookshop-browser -b component-library -p 6061",
    "bookshop-hosted": "bookshop-browser -b component-library -o site/assets/bookshop-hosted.js",
    "bookshop-live": "bookshop-live -b component-library -o site/_cloudcannon/bookshop-live.js",
    "jekyll": "bundle exec jekyll serve --port 6060 --trace --unpublished",
    "start": "run-p bookshop-dev jekyll",
    "postinstall": "mkdir -p site/node_modules/.bin/ && ln -sf ../../../node_modules/.bin/postcss site/node_modules/.bin/postcss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CloudCannon/jekyll-bookshop-starter.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CloudCannon/jekyll-bookshop-starter/issues"
  },
  "homepage": "https://github.com/CloudCannon/jekyll-bookshop-starter#readme",
  "devDependencies": {
    "@bookshop/browser": "^2.0.1",
    "@bookshop/jekyll-engine": "^2.0.1",
    "@bookshop/live": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-fluidvars": "^1.1.1"
  }
}
